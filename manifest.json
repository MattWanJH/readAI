{
    "manifest_version": 3,
    "name": "readAI",
    "version": "1.0.1",

    "description": "readAI is a Chrome extension for people with read disabilities or challenges. For a given webpage, readAI challenges generate a word count and a summary of the text.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "readAI"
    },
    "icons": {
        "16": "images/16ai.png",
        "32": "images/32ai.png",
        "48": "images/48ai.png",
        "128": "images/128ai.png"
    },
    "options_page": "options.html",
    "permissions": ["storage", "activeTab", "scripting"],
    "content_scripts": [
        {
          "js": ["content-script.js", "jquery-3.7.0.min.js"],
          "matches": ["<all_urls>"]
        }
      ]
}
